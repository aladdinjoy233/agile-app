<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.primary.ui.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <!-- Titulo -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp"
            android:text="ConfiguraciÃ³n" />

        <Button
            android:id="@+id/btModificarTienda"
            style="@style/Agile.Btn"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar tienda" />

        <Button
            android:id="@+id/btManejarUsuarios"
            style="@style/Agile.Btn"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manejar usuarios" />

        <Button
            android:id="@+id/btEliminarTienda"
            style="@style/Agile.Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/danger"
            android:text="Eliminar tienda" />

        <Button
            android:id="@+id/btSalirTienda"
            style="@style/Agile.Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/danger"
            android:text="Salir de la tienda" />

    </LinearLayout>
</FrameLayout>