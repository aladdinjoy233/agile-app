<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Buttons -->
    <style name="Agile.Btn" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/background</item>
        <item name="android:textColor">@color/text</item>
        <item name="cornerRadius">4dp</item>
        <item name="rippleColor">@color/border</item>
        <item name="strokeColor">@color/border</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Agile.Btn.Primary" parent="Agile.Btn">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/primaryContrast</item>
        <item name="rippleColor">@color/primaryDark</item>
        <item name="strokeColor">#00000000</item>
    </style>

    <!-- Inputs -->
    <style name="Agile.EditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edittext_border</item>
<!--        <item name="android:paddingTop">8dp</item>-->
<!--        <item name="android:paddingBottom">8dp</item>-->
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

</resources>